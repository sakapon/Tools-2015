<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlanetClock" x:Class="PlanetClock.MainWindow"
        Title="MainWindow" Height="301" Width="301" Topmost="True" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Foreground="White">
	<Window.DataContext>
		<local:AppModel/>
	</Window.DataContext>
	<Grid>
		<Border Height="121" Width="121" Background="#AA3399FF" CornerRadius="60">
			<TextBlock Text="{Binding Minute.Value, Mode=OneWay, StringFormat=\{0:D2\}}" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-6,0,0"/>
		</Border>
		<Border Height="51" Width="51" Background="#AAFF9933" CornerRadius="25" Margin="40,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
			<TextBlock Text="{Binding Hour.Value, Mode=OneWay}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-3,0,0"/>
		</Border>
		<Border x:Name="SecondLayer" Height="145" HorizontalAlignment="Center">
			<Ellipse Fill="#99009900" Width="11" Height="11" VerticalAlignment="Top"/>
		</Border>
	</Grid>
</Window>
