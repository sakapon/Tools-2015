<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlanetClock" x:Class="PlanetClock.MainWindow"
        Title="MainWindow" Height="300" Width="300" Topmost="True" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Foreground="White">
	<Window.DataContext>
		<local:AppModel/>
	</Window.DataContext>
	<Grid>
		<Border Height="120" Width="120" Background="#AA3399FF" CornerRadius="60">
			<TextBlock Text="{Binding Minute.Value, Mode=OneWay}" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-5,0,0"/>
		</Border>
		<Border Height="60" Width="60" Background="#AAFF9933" CornerRadius="30" Margin="40,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
			<TextBlock Text="{Binding Hour.Value, Mode=OneWay}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
		</Border>
	</Grid>
</Window>
