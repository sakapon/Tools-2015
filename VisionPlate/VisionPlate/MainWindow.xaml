<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VisionPlate"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
		x:Class="VisionPlate.MainWindow"
        Title="Vision Plate" Height="400" Width="600" MinHeight="120" MinWidth="180" AllowsTransparency="True" WindowStyle="None" Background="#01FFFFFF" Topmost="True" SnapsToDevicePixels="True">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="0" ResizeBorderThickness="16"/>
	</WindowChrome.WindowChrome>
	<Window.DataContext>
		<local:AppModel/>
	</Window.DataContext>
	<i:Interaction.Triggers>
		<i:EventTrigger EventName="MouseRightButtonUp">
			<ei:ChangePropertyAction TargetObject="{Binding SwitchDevice, Mode=OneWay}" PropertyName="Value"/>
		</i:EventTrigger>
		<i:EventTrigger EventName="Closing">
			<ei:ChangePropertyAction TargetObject="{Binding StopVideo, Mode=OneWay}" PropertyName="Value"/>
		</i:EventTrigger>
	</i:Interaction.Triggers>
	<Border Background="#3399CCFF" BorderBrush="#803399FF" BorderThickness="1" Margin="7">
		<Grid Margin="8">
			<Image Source="{Binding VideoBitmap.Value, Mode=OneWay}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
		</Grid>
	</Border>
</Window>
